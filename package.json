{
	"name": "a2ta_squelettes",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/rougerose/a2ta_squelettes.git",
	"author": "christophe le drean <christophe@rouge-rose.net>",
	"license": "GPL-3.0",
	"private": true,
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"clean": "rm -rf dist/* && mkdir dist/javascript",
		"copy:fonts": "node _src/scripts/webfonts.js",
		"scss": "node-sass _src/scss/ --include-path node_modules/ --output-style compact -o dist/css",
		"postcss": "postcss dist/css/a2ta.css -o dist/css/a2ta.css",
		"prebuild": "run-s clean copy:*",
		"build:js": "terser _src/javascript/a2ta.js -c -o dist/javascript/a2ta.js",
		"build:jsLib": "terser node_modules/swiped-events/dist/swiped-events.min.js -o dist/javascript/lib.js",
		"build:css": "run-p scss postcss",
		"build": "run-s build:*",
		"watch:scss": "onchange '_src/scss' -- run-p build:css",
		"watch:js": "onchange '_src/javascript' -- run-s build:js",
		"watch": "run-p watch:*",
		"dev-watch": "NODE_ENV='development' yarn watch",
		"dev": "NODE_ENV='development' yarn build",
		"prod": "NODE_ENV='production' yarn build"
	},
	"devDependencies": {
		"autoprefixer": "^9.7.4",
		"cpy": "^8.1.0",
		"cssnano": "^4.1.10",
		"hamburgers": "^1.1.3",
		"inuit-flexgrid": "^0.4.0",
		"inuitcss": "^6.0.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^6.1.0",
		"postcss-cli": "^7.1.0",
		"swiped-events": "https://github.com/john-doherty/swiped-events.git",
		"terser": "^4.6.7"
	}
}
